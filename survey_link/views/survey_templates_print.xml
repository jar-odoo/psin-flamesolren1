<odoo>
    <template id="survey_page_print_inherit_attachment" inherit_id="survey.survey_page_print">
        <xpath expr="//div[hasclass('js_question-wrapper')]" position="inside">
            <t t-if="question.question_type == 'attachment'">
                <t t-set="answer_line" t-value="answer.user_input_line_ids.filtered(lambda l: l.question_id.id == question.id and not l.skipped)[:1]"/>
                <t t-if="answer_line and answer_line.value_attachment_filename">
                    <div class="mt-3 mb-2">
                        <span class="badge rounded-pill px-3 py-2 bg-primary-subtle text-primary-emphasis shadow-sm d-inline-flex align-items-center gap-2">
                            <i class="fa fa-paperclip"></i>
                            <t t-esc="answer_line.value_attachment_filename"/>
                        </span>
                    </div>
                </t>
                <t t-else="">
                    <div class="text-muted fst-italic mt-2 mb-2">
                        No attachment uploaded.
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
