<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_margin_master_form" model="ir.ui.view">
        <field name="name">margin.master.form</field>
        <field name="model">margin.master</field>
        <field name="arch" type="xml">
            <form string="Margin Master">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="margin_per_kw"/>
                        <field name="user_ids" widget="many2many_tags"/>
                        <field name="city_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_margin_master_tree" model="ir.ui.view">
        <field name="name">margin.master.tree</field>
        <field name="model">margin.master</field>
        <field name="arch" type="xml">
            <list string="Margin Masters">
                <field name="name"/>
                <field name="margin_per_kw"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="city_id"/>
            </list>
        </field>
    </record>

    <record id="action_margin_master" model="ir.actions.act_window">
        <field name="name">Margin Master</field>
        <field name="res_model">margin.master</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create margin records to assign per-kW margins by user and city.</p>
        </field>
    </record>

    <menuitem id="menu_margin_master" name="Margin Master" parent="sale.menu_sale_config" action="action_margin_master" sequence="12"/>
</odoo>
