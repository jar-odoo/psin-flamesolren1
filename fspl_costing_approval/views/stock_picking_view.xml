<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_last_price" model="ir.ui.view">
        <field name="name">stock.picking.form.last.price</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="picking_type_id" position="after">
                <field name="is_last_purchase_price" invisible="1"/>
                <field name="is_total_amount" invisible="1"/>
            </field>
            <xpath expr="//page[@name='operations']/field[@name='move_ids_without_package']/list/field[@name='product_uom']" position="after">
                <field name="last_purchase_price" column_invisible="parent.state in ['draft', 'waiting', 'confirmed', 'assigned'] or not parent.is_last_purchase_price"/>
                <field name="total_amount" column_invisible="parent.state in ['draft', 'waiting', 'confirmed', 'assigned'] or not parent.is_total_amount"/>
            </xpath>
        </field>
    </record>
</odoo>
