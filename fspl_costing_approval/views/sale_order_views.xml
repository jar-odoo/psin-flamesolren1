<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_optional_fields" model="ir.ui.view">
        <field name="name">sale.order.form.optional.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_discount_approval" type="object" class="oe_stat_button" icon="fa-diamond" invisible="not approval_requested">Approval
                </button>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="after">
                <button name="action_send_for_approval" type="object" class="oe_stat_button" invisible="approval_requested or not discount_tooltip">Send for Approval
                </button>
            </xpath>
            <field name="payment_term_id" position="after">
                <field name="approval_requested"/>
                <field name="approval_request_id" readonly="1"/>
            </field>
            <field name="sale_order_template_id" position="after">
                <field name="dc_capacity_kwp" readonly="approval_requested"/>
                <field name="discount_amount" class="oe_inline text-start" readonly="approval_requested"/>
                <field name="discount_tooltip" class="fst-italic text-muted text-danger fw-bold" string="" force_save="1" invisible="not discount_tooltip"/>
                <field name="sales_70" readonly="1" class="text-danger fw-bold" force_save="1"/>
                <field name="sales_30" readonly="1" class="text-danger fw-bold" force_save="1"/>
            </field>
            <xpath expr="//notebook/page[@name='optional_products']//field[@name='sale_order_option_ids']/list/field[@name='quantity']" position="after">
                <field name="required_qty" readonly="parent.approval_requested or parent.state == 'sale'"/>
                <field name="standard_cost_price" readonly="1" groups="!fspl_costing_approval.group_restrict_cost"/>
                <field name="last_previous_price" readonly="1" groups="!fspl_costing_approval.group_restrict_cost"/>
                <field name="tax_id" widget="many2many_tags" readonly="parent.approval_requested or parent.state == 'sale'"/>
            </xpath>
            <xpath expr="//notebook/page[@name='optional_products']//field[@name='sale_order_option_ids']/list/field[@name='discount']" position="after">
                <field name="final_amount" readonly="parent.approval_requested or parent.state == 'sale'" groups="!fspl_costing_approval.group_restrict_master_price"/>
            </xpath>
            <xpath expr="//notebook/page[@name='optional_products']//field[@name='sale_order_option_ids']/list/field[@name='price_unit']" position="attributes">
                <attribute name="readonly">parent.approval_requested or parent.state == 'sale'</attribute>
                <attribute name="groups">!fspl_costing_approval.group_restrict_master_price</attribute>
            </xpath>
            <xpath expr="//page[@name='optional_products']/field[@name='sale_order_option_ids']" position="after">
                <group name="note_group" col="12" class="mt-2 mt-md-0">
                    <group colspan="4" class="order-1 order-lg-0">
                        <field name="base_amount_per_kw" readonly="1" groups="!fspl_costing_approval.group_restrict_total_cost"/>
                        <field name="material_cost" readonly="1" groups="!fspl_costing_approval.group_restrict_total_cost"/>
                        <field name="expense_cost" readonly="1" groups="!fspl_costing_approval.group_restrict_total_cost"/>
                        <field name="margin_with_dc" readonly="1" force_save="1" groups="!fspl_costing_approval.group_restrict_total_cost"/>
                        <field name="discount_with_dc" readonly="1" force_save="1" groups="!fspl_costing_approval.group_restrict_total_cost"/>
                        <field name="final_sales_kwp_without_tax" readonly="1" force_save="1" groups="!fspl_costing_approval.group_restrict_total_cost"/>
                        <field name="final_amt_without_tax" readonly="1" force_save="1" groups="!fspl_costing_approval.group_restrict_total_cost"/>
                    </group>
                    <group class="oe_subtotal_footer d-flex order-0 order-lg-1 flex-column gap-0 gap-sm-3" colspan="2" name="sale_total">
                        <field name="option_tax_totals" widget="account-tax-totals-field" nolabel="1" groups="!fspl_costing_approval.group_restrict_master_price"/>
                    </group>
                </group>
            </xpath>
            <page name="optional_products" position="attributes">
                <attribute name="invisible"></attribute>
            </page>
        </field>
    </record>

    <record id="view_sales_order_filter_costing_approval" model="ir.ui.view">
        <field name="name">sale.order.list.select.costing_approval</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group/filter[@name='order_month']" position="after">
                <filter string="Discount" name="discount_amount" domain="[]" context="{'group_by': 'discount_amount'}"/>
                <filter string="DC Capacity Kwp" name="dc_capacity_kwp" domain="[]" context="{'group_by': 'dc_capacity_kwp'}"/>
            </xpath>
        </field>
    </record>
</odoo>
